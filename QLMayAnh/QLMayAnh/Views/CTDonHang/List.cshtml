@model PagedList.IPagedList<QLMayAnh.Models.Entity.CTDONHANG>
@using PagedList.Mvc;
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="table-responsive">
    <table class="table">
        @{
            var item1 = Model.FirstOrDefault();
        }
        <div class="form-group col-md-10">
            Mã đơn hàng: @item1.IDDONHANG
        </div>
        <div class="form-group col-md-10">
            Tên khách hàng: @item1.DONHANG.KHACHHANG.TENKH
        </div>
        <div class="form-group col-md-10">
            Thời gian lập hóa đơn: @item1.DONHANG.NGAYLAP
        </div>
        <div class="form-group col-md-10">
            Trạng thái xử lý: @item1.DONHANG.TRANGTHAI
        </div>
        <tr>
            @*<th>
                    Mã chi tiết đơn hàng
                </th>*@
            <th>
                Mã đơn hàng
            </th>
            <th>
                Mã máy
            </th>
            <th>
                Đơn giá
            </th>
            <th>
                Số lượng
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IDCTDONHANG)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IDDONHANG)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IDMAY)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DONGIA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SOLUONG)
                </td>

            </tr>
        }

    </table>

    @Html.PagedListPager(Model, page => Url.Action("List", new { page }))

    <div>
        <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("List", "DonHang")'">
            <i class="fa fa-arrow-left"></i>
        </button>
    </div>
</div>